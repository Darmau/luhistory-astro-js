---
import {sanityClient} from "sanity:client";
const articlesData = await sanityClient.fetch(`
  *[_type == 'article']|order(publishDate desc){
    title,
    "slug": slug.current,
    category
}
`)
---

<div class="w-full max-w-5xl mx-auto mb-24 px-4">
  <hgroup class = "flex justify-between items-center text-neutral-900 mb-8">
    <h2 class = "font-bold text-4xl md:text-5xl font-serif">Documents</h2>
    <div class = "flex items-center gap-2">
      <p class = "text-2xl font-thin font-serif">View more</p>
      <svg
        xmlns = "http://www.w3.org/2000/svg" fill = "none" viewBox = "0 0 24 24"
        stroke-width = "1.5" stroke = "currentColor" class = "w-5 h-5"
      >
        <path
          stroke-linecap = "round" stroke-linejoin = "round"
          d = "M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"
        />
      </svg>
    </div>
  </hgroup>
  <ul class="space-y-8 md:space-y-10">
    {articlesData.map((article) => (
      <li>
        <a href={`/article/${article.slug}`}
           class="space-y-2"
        >
          <h3 class="font-serif font-bold text-2xl md:text-3xl text-neutral-900">{article.title}</h3>
          <p class="text-neutral-900 opacity-50">{article.category ?? ''}</p>
        </a>
      </li>
    ))}
  </ul>
</div>
