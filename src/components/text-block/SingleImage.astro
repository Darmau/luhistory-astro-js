---
import {Image} from 'astro:assets'
const { url, caption, size } = Astro.props;
---

<figure class = "col-span-8">
  {size === 'fullWidth' ?
    <Image
      class = "w-full"
      src={url}
      alt={caption || '图片'}
      width="800"
      height="600"
    />
  :
    <Image
      class = "w-1/2 mx-auto"
      src={url}
      alt={caption || '图片'}
      width="800"
      height="600"
    />}
  {caption &&
    <figcaption class = "text-center text-sm text-gray-500 mt-2">{caption}</figcaption>}
</figure>
