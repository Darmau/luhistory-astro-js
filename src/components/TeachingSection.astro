---
import {sanityClient} from "sanity:client";
const teachingData = await sanityClient.fetch(`
  *[_type == "teaching"]{
  "overview": overview->body[0].children[0].text
}
`)

---

<div class="col-start-2 col-span-10 mb-24">
  <hgroup class = "flex justify-between items-center text-neutral-900 mb-8">
    <h2 class = "font-bold text-4xl md:text-5xl font-serif">Teaching</h2>
    <div class = "flex items-center gap-2">
      <a href="/teaching" class = "text-2xl font-thin font-serif" data-astro-prefetch>View more â†’</a>
    </div>
  </hgroup>
  <p class = "font-serif font-bold line-clamp-2 text-2xl md:text-3xl text-neutral-900 mb-8">{teachingData[0].overview}}</p>
</div>
