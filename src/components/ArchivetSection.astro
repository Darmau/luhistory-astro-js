---
import {sanityClient} from "sanity:client";
const articlesData = await sanityClient.fetch(`
  *[_type == 'article']|order(publishDate desc){
    title,
    "slug": slug.current,
    category
}[0...4]
`)

// 将xxx-xxx的字符串去掉-
---

<div class="col-start-2 col-span-10 mb-24">
  <hgroup class = "flex justify-between items-center text-neutral-900 mb-8">
    <h2 class = "font-bold text-4xl md:text-5xl font-serif">Documents</h2>
    <div class = "flex items-center gap-2">
      <a href="/archive/all/1" class = "text-2xl font-thin font-serif" data-astro-prefetch>View more →</a>
    </div>
  </hgroup>
  <ul class="space-y-8 md:space-y-10">
    {articlesData.map((article) => (
      <li>
        <a href={`/archive/detail/${article.slug}`}
           class="space-y-2"
        >
          <h3 class="line-clamp-2 font-serif font-bold text-2xl md:text-3xl text-neutral-900">{article.title}</h3>
          <p class="text-neutral-900 opacity-50 capitalize">
            {article.category}
          </p>
        </a>
      </li>
    ))}
  </ul>
</div>
