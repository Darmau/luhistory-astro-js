---
const {exhibitions} = Astro.props;
---

<div class = "col-start-1 col-span-8 my-4 lg:my-16">
  <hgroup class="my-12">
    <h2 class = "font-serif font-bold text-neutral-900 text-3xl md:text-5xl">Exhibitions</h2>
  </hgroup>
  <ul class="space-y-8 pl-0 list-none">
    {exhibitions.map((exhibition) => (
      <li>
        <a
          class="no-underline"
          href={`/exhibition/detail/${exhibition.slug}`}>
          <h3 class="font-serif font-bold text-3xl text-neutral-900 mb-3">{exhibition.title}</h3>
          <small class="font-sans text-base text-neutral-900 opacity-50">
            <span>{exhibition.date.split('-')[0]}</span>
            Â·
            <span>{exhibition.city}</span>
          </small>
        </a>
      </li>
    ))}
  </ul>
</div>
